<div class="row">
	<div class="col-sm-offset-2 col-sm-8 col-sm-offset-2">
		<h1 class="text-center"><%= @sale.title %></h1>
		<h2 class="text-center"><%= @sale.address %></h2>

    <div class="col-sm-offset-2 col-sm-8 col-sm-offset-2">
      <div id="map" class="img-responsive"></div>
    </div>

		<%= image_tag @sale.picture.url, class: "img-responsive img-thumbnail" %>
		<p class="text-center">Description: <%= @sale.description %></p>
		<p class="text-center"><%= @sale.format_date %></p>
		<p class="text-center"><%= @sale.format_time %></p>
	</div>
</div>
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers([
    {
      "lat": <%= @sale.latitude %>,
      "lng": <%= @sale.longitude %>,
      "picture": {
        "url": "http://www.google.com/mapfiles/marker.png",
        "width":  36,
        "height": 36,
      },
      "infowindow": "hello!"
    }
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  handler.getMap().setZoom(16);
});
</script>

