<video autoplay loop poster="/assets/ggsale-poster.jpg" id="bgvid">
  <source src="/assets/ggsale-intro.webm" type="video/webm" />
  <source src="/assets/ggsale-intro.mp4" type="video/mp4" />
</video>

<div class="container-fluid">
	<div class="row" id="main-headers">
		<div class="col-md-12">
			<h1 id="main-header" class="text-uppercase text-center">Find Your Bargain</h1>
			<p class="text-center">Buy and sell things effortlessly</p>
		</div>
	</div>
	<%= form_tag search_sales_path, class: "form-horizontal", role: "form", 'data-no-turbolink' => true, method: :get do %>
		<div class="form-group">
			<div class="col-sm-offset-3 col-sm-6">
				<%= text_field_tag :address, params[:address], placeholder: "Where do you want to look for sales?", class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-3 col-sm-6 text-center">
				<%= submit_tag "Search", class: "btn btn-default" %>
			</div>
		</div>
	<% end %>
</div>
