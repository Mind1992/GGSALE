<div class="container-fluid">
	<div class="row">
		<% @sales.each do |sale| %>
		  	<div class="col-sm-6 col-md-3">
		    	<div class="thumbnail">
		      	<%= image_tag sale.picture.url(:medium), class: "img-responsive img-thumbnail" %>
		      	<div class="caption">
			        <h3 class="text-center"><%= sale.title %></h3>
			        <p class="text-center"><%= sale.start_date %> <%= sale.end_date %></p>
			        <p class="text-center"><%= sale.address %></p>
			        <p class="text-center"><%= link_to "View", sale_path(sale), class: "btn btn-primary", role: "button" %></p>
		    	</div>
		  	</div>
			</div>
		<% end %>
	</div>
	<% if user_signed_in? %>
		  <%= link_to "Add Sale", new_sale_path, id: "new_sale", class: "btn btn-success btn-lg", remote: true %>
		<% end %>
</div>