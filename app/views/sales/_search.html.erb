<div class="navbar navbar-fixed-top" role="navigation">
   <div class="container">
      <div class="navbar-header">
         <% if user_signed_in? %>
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
         <%= link_to "GGSALE", root_path, id: "logo-all" %>
         <%= form_tag search_sales_path, class: "navbar-form pull-left", role: "search", method: :get do %>
            <div class="input-group">
              <%= text_field_tag :address, params[:address], class: "form-control", placeholder: "Where are you looking for?" %>
              <div class="input-group-btn">
                <%= submit_tag "Search", class: "btn btn-default", 'data-no-turbolink' => true %>
              </div>
            </div>
         <% end %>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right" id="dropdown-list">
          <li class="dropdown" id="dropdown-link">
            <a data-toggle="dropdown" data-target="#"><b class="glyphicon glyphicon-user"></b><spam id="user-name"><%= current_user.username %></spam><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Add Sale", new_sale_path, id: "new_sale", class: "btn  btn-dropdown", remote: true %></li>
              <li><%= link_to "Manage Sales", user_path(current_user), id: "user_sales", class: "btn btn-dropdown" %></li>
              <li><%= link_to 'Edit profile', edit_user_registration_path, class: "btn btn-dropdown" %></li>
              <li><%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-dropdown" %></li>
            </ul>
          </li>
        </ul>
        <% end %>
      </div>
   </div>
</div>
