<!DOCTYPE html>
<html>
<head>
  <title>Gigisale</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Istok+Web:700' rel='stylesheet' type='text/css'>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>
<body>
  <div class="navbar" id="main-navbar" role="navigation">
  	<div class="container-fluid">
  		<div class="row">
  		<% if user_signed_in? %>
	  		<%= link_to "GGSALE", root_path, id: "logo" %>
				<button type="button" class="navbar-toggle" id="main-toggle-nav" data-toggle="collapse" data-target=".navbar-collapse">
	        <span class="icon-bar main-toggle-span"></span>
	        <span class="icon-bar main-toggle-span"></span>
	        <span class="icon-bar main-toggle-span"></span>
	     	</button>
	     </div>
    	<div class="col-xs-12">
    		<div class="collapse navbar-collapse">
    	    <ul class="nav navbar-nav navbar-right" id="dropdown-list">
  		      <li class="dropdown">
  		      	<a data-toggle="dropdown" data-target="#"><b class="glyphicon glyphicon-user"></b><spam id="user-name"><%= current_user.username %></spam><b class="caret"></b></a>
  		      	<ul class="dropdown-menu">
  		      		<li><%= link_to "Add Sale", new_sale_path, id: "new_sale", class: "btn  btn-dropdown", remote: true %></li>
  		      		<li><%= link_to "Manage Sales", user_path(current_user), id: "user_sales", class: "btn btn-dropdown" %></li>
			        	<li><%= link_to 'Edit profile', edit_user_registration_path, class: "btn btn-dropdown" %></li>
			        	<li><%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-dropdown" %></li>
		      		</ul>
		      	</li>
	        </ul>
  		  </div>
  		  <% else %>
  		  	<div class="row">
  		  		<div class="col-xs-12">
	  		  		<%= link_to "GGSALE", root_path, id: "logo-guest" %>
	  		    	<div class="navbar-right session-links">
		  		    	<%= link_to "Sign Up", new_user_registration_path, class: "session-link" %>
		  		    	<%= link_to "Log In", new_user_session_path, class: "session-link"%>
		  		  </div>
	  				</div>
	  			</div>
  			<% end %>
  			</div>
  		</div>
  	</div>
  </div>
	<%= yield %>
</body>
</html>
